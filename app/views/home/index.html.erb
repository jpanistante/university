<div class="columns">
  <div class="column">
    <h2>Welcome!</h2><br>

     <%= form_with(url: search_path, method: :get, local: true) do %>
          <div class="field is-grouped mb-5">
            <div class="control is-expanded">
              <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Student') %>
            </div>
            <div class="control ">
              <%= submit_tag("Search", class: "button is-primary") %>
            </div>
          </div>
      <% end %>


    <ol class="ml-5">
      <% @departments.each do |department| %>
        <li><%= link_to department.name, department %></li>
      <% end %>
    </ol>
  </div>
</div>
